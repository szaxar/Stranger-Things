<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ST3.presenter.AbilityPresenter">
    <center>
        <TableView fx:id="abilityTable" prefHeight="600.0" prefWidth="239.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="abilityNameColumn" prefWidth="132.0" text="abilityName" />
            <TableColumn fx:id="manaCostColumn" prefWidth="75.0" text="manaCost" />
            <TableColumn fx:id="valueColumn" prefWidth="75.0" text="value" />
            <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="description" />
            <TableColumn fx:id="abilityTypeColumn" prefWidth="75.0" text="abilityType" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </opaqueInsets>
            <children>
                <Button fx:id="useButton" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleUseAction" text="Use">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin></Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </VBox>
    </right>
</BorderPane>
